<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_listaPromociones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_empresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Empresa: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_nombrePromocion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Nombre de la Promocion: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_tipoPromocion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Tipo de Promocion:"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_cantidadDescuento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Cantidad de descuento: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_cuponesDisponible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Cupones Disponibles: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_vigencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Vigencia:"
                android:textStyle="bold"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>