<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_listaPromociones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_empresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Nombre de la promocion: "
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_nombrePromocion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Tipo de la Promocion: "
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_tipoPromocion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Codigo:"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_cantidadDescuento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="DescripciÃ³n: "
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_cuponesDisponible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Restricciones: "
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_inicioPromocion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Fecha inicio de promocion:"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_finSeguridad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Fecha fin de promocion:"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_sucursalesValidas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="sucursales validas:"
                    android:textStyle="bold"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>