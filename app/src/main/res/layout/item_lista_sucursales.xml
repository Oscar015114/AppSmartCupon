<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_nombre_sucursal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Nombre de la sucursal"
                android:textColor="@color/negro"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/tv_dirrecion_sucursal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Empresa que la oferta"
                android:textColor="@color/gris"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_telefono_sucursal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Telefono"
                android:textColor="@color/gris"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_codigo_postal_sucursal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Codigo postal"
                android:textColor="@color/gris"
                android:textSize="18dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>