<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriasActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="11dp"
            android:layout_height="17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Busqueda"
                android:textColor="@color/negro"
                android:textSize="25dp" />


        </LinearLayout>

      <Spinner
          android:id="@+id/spBusqueda"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="50dp"
          />

        <Space
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnFecha"
                android:layout_width="93dp"
                android:layout_height="70dp"
                android:src="@drawable/fecha"
                android:text="Buscar"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edtFecha"
                android:layout_width="288dp"
                android:layout_height="match_parent"
                android:hint="   Buscar por fecha"
                android:textSize="24dp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/btnBusqueda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:paddingVertical="10dp"
            android:text="Buscar"
            android:textSize="20dp"
            android:textColor="@color/negro"
            android:fontFamily="@font/poppins_semi_bold"
            android:textAllCaps="false"
            android:letterSpacing="0"
            />


        <Space
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/error_promocion"
            android:textColor="@color/gris"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textSize="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_promocionesEmpresa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            />



    </LinearLayout>

</ScrollView>