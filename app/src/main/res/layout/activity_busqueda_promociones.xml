<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriasActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="11dp"
            android:layout_height="17dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:text="            Busqueda"
                android:textSize="24dp"
                android:textStyle="bold" />

        </LinearLayout>

        <Space
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <Space
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBuscarEmpresa"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/edificio"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="288dp"
                android:layout_height="match_parent"
                android:text="   Buscar por Empresa"
                android:textSize="24dp"
                android:textStyle="bold" />

        </LinearLayout>

        <Space
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="93dp"
                android:layout_height="70dp"
                android:src="@drawable/fecha"
                android:text="Buscar"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="288dp"
                android:layout_height="match_parent"
                android:text="   Buscar"
                android:textSize="24dp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:paddingVertical="10dp"
            android:text="Buscar"
            android:textSize="20dp"
            android:textColor="@color/negro"
            android:fontFamily="@font/poppins_semi_bold"
            android:textAllCaps="false"
            android:letterSpacing="0"
            />


        <Space
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_promociones"
            android:layout_width="match_parent"
            android:layout_height="420dp" />



    </LinearLayout>

</ScrollView>