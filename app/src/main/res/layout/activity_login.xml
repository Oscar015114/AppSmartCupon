<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_login"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/titulo_login"
        android:textColor="@color/negro"
        android:textSize="28dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="@string/parrafo_login"
        android:textColor="@color/gris"
        android:textSize="18dp"
        android:fontFamily="@font/poppins_regular" />

    <EditText
        android:id="@+id/etCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:drawableStart="@drawable/ic_emai"
        android:drawablePadding="12dp"
        android:hint="@string/correo_login"
        android:padding="15dp"
        android:textColor="@color/gris"
        android:fontFamily="@font/poppins_regular"
        android:inputType="textEmailAddress"
        android:background="@drawable/custom_input"
        />
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="12dp"
        android:hint="@string/contrasenia_login"
        android:padding="15dp"
        android:textColor="@color/gris"
        android:fontFamily="@font/poppins_regular"
        android:inputType="textPassword"
        android:background="@drawable/custom_input"
        />

    <Button
        android:id="@+id/btIniciarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:paddingVertical="10dp"
        android:text="@string/ingresar_login"
        android:textSize="20dp"
        android:textColor="@color/negro"
        android:fontFamily="@font/poppins_semi_bold"
        android:textAllCaps="false"
        android:letterSpacing="0"
        />

    <Button
        android:id="@+id/btCrearCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:text="Crear una Cuenta"
        android:backgroundTint="@color/negro"
        android:textColor="@color/white"
        android:paddingVertical="10dp"
        android:textSize="20dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textAllCaps="false"
        android:letterSpacing="0"
        />

</LinearLayout>